#include<bits/stdc++.h>
 using namespace std;
   int main(){
       
       
       cout<<"finding the triplate sum "<<endl;
       
       int n ;
       
       cout<<"enter the size of array"<<endl;
        
        cin>>n ;
         
       vector<int>arr(n); 
         cout<<"enter the elememnt "<<endl;
           
         for(auto &i : arr) cin>>i;
          
          cout<<"your array"<<endl; 
          
           for(auto i : arr){
               cout<<i<<" ";
           }
       cout<<endl;
       
       
       sort(arr.begin() ,arr.end());
        
       vector<vector<int>>ans;
        
          
        for(int k =0 ;k<n ;k++){
            
            if(k >0 && arr[k]==arr[k-1] ) continue;
             
             
            int target = -(arr[k]);
             
             int i = k+1 ;
              int j = n-1 ; 
               
               while(i<j){
                   
                   int sum = arr[i]+arr[j];
                    
                      if( sum > target){
                          
                          j--;
                          
                      }
                      
                      else if(sum < target){
                          i++;
                      }
                      
                      else{
                          while( i<j && arr[i] == arr[i+1]) i++;
                            while( i<j && arr[j]==arr[j-1]) j--;
                          
                          ans.push_back({arr[k] , arr[i], arr[j]});
                           
                           i++;
                            j--;
                             
                      }
                      
               }
               
            
        }
       
      cout<<"answers are"<<endl;
       
        
       for(auto i : ans){
           for(auto j : i){
               cout<<j<<" ";
                
           }
           cout<<"     ";
       }
      
        
        
       
   }
