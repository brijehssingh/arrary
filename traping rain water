#include<bits/stdc++.h>
using namespace std;
 int main(){
     
     
     int n ;
       cout<<"enter the value"<<endl;
        cin>>n;
         
     vector<int>arr(n);
      cout<<"enter the elemnts"<<endl;
       for(auto &i : arr) cin>>i;
         
         cout<<endl;
          
          
          for(auto i : arr){
              cout<<i;
          }
          
          cout<<endl;
          
          vector<int>left(n);
          left[0]= arr[0];
           vector<int>right(n);
            right[n-1]= arr[n-1];
            
            for( int i=1 ;i<n ;i++){
                
                left[i] = max(arr[i] , left[i-1]);
                
            }
            
            
            for(auto i : left){
                cout<<i<<" ";
            }
            cout<<endl;
            
            for( int i = n-2;i>=0 ;i--){
                right[i]= max(arr[i], right[i+1]);
            }
            
            for(auto i : right){
                cout<<i<<" ";
            }
            cout<<endl; 
            
            
            int water =0 ;
             
              for(int i =0 ;i<n ;i++){
                  
                  int val = min(left[i],right[i]);
                   water+= max(0 , val-arr[i]);
                  
              }
          
          
        cout<<water;
         
     
 }
